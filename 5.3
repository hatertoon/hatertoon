package employee;

public class Worker extends Employee {
    private double bonus;

    // ปรับเมธอดคำนวณโบนัสให้เป็น 4 เท่าของรายได้
    public void calBonus() {
        bonus = income * 4.0;
    }

    public double getBonus() {
        return bonus;
    }
}
